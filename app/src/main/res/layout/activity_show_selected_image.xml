<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowSelectedImageActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:tint="@android:color/black"
            android:paddingHorizontal="5dp"
            android:background="?selectableItemBackground"
            android:onClick="back"/>
        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Images"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <ImageView
        android:id="@+id/show_selected_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:src="@drawable/fake_flower"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:paddingHorizontal="50dp"
        android:layoutDirection="rtl">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/black"
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:onClick="imageForward"
            android:layoutDirection="rtl"/>
        <TextView
            android:id="@+id/show_selected_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1/2"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/black"
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:onClick="imageBack"
            android:layoutDirection="ltr"/>
    </LinearLayout>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_gravity="bottom"
           android:orientation="vertical"
           android:background="@drawable/bottom_sheet_background">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="47dp"
               android:gravity="center_horizontal">
               <Button
                   android:layout_width="160dp"
                   android:layout_height="50dp"
                   android:background="@drawable/button_background"
                   android:text="@string/add_to_cart"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_bold"
                   android:textColor="@android:color/white"
                   android:layout_gravity="center_horizontal"
                   android:textAllCaps="false"
                   android:layout_marginEnd="30dp"
                   android:onClick="addToCart"/>
               <Button
                   android:layout_width="160dp"
                   android:layout_height="50dp"
                   android:background="@drawable/button_background"
                   android:text="@string/add_more_images"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_bold"
                   android:textColor="@android:color/white"
                   android:layout_gravity="center_horizontal"
                   android:textAllCaps="false"
                   android:onClick="back"/>
           </LinearLayout>
       </LinearLayout>
   </FrameLayout>
</LinearLayout>