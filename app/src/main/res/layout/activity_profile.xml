<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProfileActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:tint="@android:color/black"
            android:paddingHorizontal="5dp"
            android:background="?selectableItemBackground"
            android:onClick="back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/My_Profile"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginHorizontal="30dp"
            android:background="@android:color/transparent">
              <com.dd.ShadowLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:sl_shadowRadius="8dp"
                  app:sl_shadowColor="#24000000"
                  app:sl_dx="0dp"
                  app:sl_dy="0dp"
                  app:sl_cornerRadius="20dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@drawable/profile_item_background">
                      <TextView
                          android:id="@+id/profile_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          tools:text="Nour salem"
                          android:gravity="center_horizontal"
                          android:textSize="18sp"
                          android:fontFamily="@font/nunito_bold"
                          android:textColor="@android:color/black"
                          android:layout_marginTop="60dp"
                          android:layout_marginBottom="10dp"
                          android:textStyle="bold"/>

                      <Button
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="20dp"
                          android:background="@drawable/button_background"
                          android:text="@string/update"
                          android:textSize="15sp"
                          android:fontFamily="@font/nunito_bold"
                          android:textColor="@android:color/white"
                          android:layout_gravity="center_horizontal"
                          android:textAllCaps="false"
                          android:onClick="updateProfile"
                          android:drawableStart="@drawable/ic_edit"
                          android:paddingHorizontal="15dp"
                          android:drawablePadding="5dp"
                          />
                  </LinearLayout>
              </com.dd.ShadowLayout>

        </LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="33dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_user_image"
            app:civ_border_color="@android:color/white" />

    </RelativeLayout>

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="8dp"
        app:sl_shadowColor="#24000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        app:sl_cornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/profile_item_background">
            <TextView
                android:id="@+id/profile_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="+941312970249"
                android:textSize="14sp"
                android:textColor="#303030"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_phone"
                android:textAlignment="viewStart"
                android:textDirection="ltr"/>
            <TextView
                android:id="@+id/profile_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="العنوان"
                android:textSize="14sp"
                android:textColor="#303030"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_location"
                android:layout_marginTop="15dp"
                android:textAlignment="viewStart"/>
            <TextView
                android:id="@+id/profile_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nour@gmail.com"
                android:textSize="14sp"
                android:textColor="#303030"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_email"
                android:layout_marginTop="15dp"
                android:textAlignment="viewStart"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </com.dd.ShadowLayout>
</LinearLayout>