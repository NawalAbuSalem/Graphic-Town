<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DesignDetailsActivity"
    android:background="@android:color/white"
    android:fillViewport="true">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/design_image"
               android:layout_width="match_parent"
               android:layout_height="240dp"
               android:scaleType="centerCrop"
               android:background="#1ACFCCCC"/>
           <com.github.ybq.android.spinkit.SpinKitView
               android:id="@+id/spin_kit"
               style="@style/SpinKitView.DoubleBounce"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               app:SpinKit_Color="@color/colorAccent" />
       </FrameLayout>
       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="15dp">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_back"
               android:tint="@android:color/black"
               android:padding="5dp"
               android:background="?selectableItemBackground"
               android:onClick="back"
               />
       </FrameLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="200dp"
           android:orientation="vertical"
           android:paddingHorizontal="15dp"
           android:background="@drawable/design_details_background">
           <TextView
               android:id="@+id/design_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               tools:text="تهنئة"
               android:gravity="center_horizontal"
               android:textSize="25sp"
               android:fontFamily="@font/nunito_semi_bold"
               android:textColor="@android:color/black"
               android:layout_marginTop="15dp"/>
           <Button
               android:layout_width="160dp"
               android:layout_height="50dp"
               android:layout_marginTop="33dp"
               android:background="@drawable/button_background"
               android:text="@string/start_designing"
               android:textSize="18sp"
               android:fontFamily="@font/nunito_bold"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:layout_gravity="center_horizontal"
               android:textAllCaps="false"
               android:onClick="chooseDesignImages"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/description"
               android:textSize="18sp"
               android:fontFamily="@font/nunito_semi_bold"
               android:textColor="@android:color/black"
               android:layout_marginTop="40dp"/>
           <TextView
               android:id="@+id/design_description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               tools:text="نختار الأفضل لطباعة تصاميمكم \n أوراقنا متينة و مصممة لتدوم للأجيال القادمة"
               android:textAlignment="viewStart"
               android:textSize="15sp"
               android:fontFamily="@font/nunito_semi_bold"
               android:layout_marginTop="10dp"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginTop="30dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/Material_Type"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_semi_bold"
                   android:textColor="#7F7F7F"
                   />
               <TextView
                   android:id="@+id/design_material_type"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:text="ورق صور مقاوم للبصمات"
                   android:textSize="15sp"
                   android:gravity="center_vertical"
                   android:layout_marginStart="5dp"
                   android:textAlignment="viewStart"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/material_dimension"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_semi_bold"
                   android:textColor="#7F7F7F"
                   />
               <TextView
                   android:id="@+id/design_material_dimension"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:text="12*15 سم"
                   android:textSize="15sp"
                   android:gravity="center_vertical"
                   android:layout_marginStart="5dp"
                   android:textAlignment="viewStart"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/number_of_picture"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_semi_bold"
                   android:textColor="#7F7F7F" />
               <TextView
                   android:id="@+id/design_number_of_picture"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:text="صورة واحدة لكل طباعة"
                   android:textSize="15sp"
                   android:gravity="center_vertical"
                   android:layout_marginStart="5dp"
                   android:textAlignment="viewStart"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/amount"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_semi_bold"
                   android:textColor="#7F7F7F" />
               <TextView
                   android:id="@+id/design_amount"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:text="20"
                   android:textSize="15sp"
                   android:gravity="center_vertical"
                   android:layout_marginStart="5dp"
                   android:textAlignment="viewStart"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@android:color/darker_gray"
               android:layout_marginTop="30dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="20dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/designed_by"
                   android:textSize="18sp"
                   android:fontFamily="@font/nunito_semi_bold"
                   android:textColor="@android:color/black" />
               <TextView
                   android:id="@+id/design_company"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="شركة تذكار"
                   android:textSize="18sp"
                   android:textColor="@color/colorAccent"
                   android:padding="5dp"
                   android:layout_marginStart="5dp"
                   android:onClick="showCompanyCategory"
                   android:background="?selectableItemBackground"/>
           </LinearLayout>
       </LinearLayout>
   </FrameLayout>
</ScrollView>