<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PaymentMethodsActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:tint="@android:color/black"
            android:paddingHorizontal="5dp"
            android:background="?selectableItemBackground"
            android:onClick="back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_methods"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_by"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"/>
    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="8dp"
        app:sl_shadowColor="#33000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:sl_cornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/profile_item_background"
            android:onClick="payPalPayment">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_paypal"
                android:scaleType="centerCrop"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PAYPAL"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                android:textColor="#CC000000"
                android:drawablePadding="20dp"
                android:textAlignment="viewStart"
                android:textDirection="ltr"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </com.dd.ShadowLayout>
    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="8dp"
        app:sl_shadowColor="#33000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:sl_cornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/profile_item_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mastercard"
                android:scaleType="centerCrop"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/MasterCard"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                android:textColor="#CC000000"
                android:textAlignment="viewStart"
                android:textDirection="ltr"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </com.dd.ShadowLayout>
    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="8dp"
        app:sl_shadowColor="#33000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:sl_cornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/profile_item_background"
            android:onClick="cashPayment">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cash"
                android:scaleType="centerCrop"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Cash"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                android:textColor="#CC000000"
                android:textAlignment="viewStart"
                android:textDirection="ltr"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </com.dd.ShadowLayout>
</LinearLayout>