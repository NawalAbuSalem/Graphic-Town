<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#08000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_content_layout"
        android:visibility="gone"
        android:background="@android:color/white">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4F878779">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/home_viewpager"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layoutDirection="ltr"
                android:background="@android:color/white"/>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/home_pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:ci_drawable="@drawable/selected_indicator"
                app:ci_drawable_unselected="@drawable/unselected_indicator"
                app:ci_height="5dp"
                app:ci_margin="3dp"
                app:ci_width="5dp"
                app:ci_gravity="start|center_vertical"
                android:paddingStart="27dp"
                android:layout_gravity="bottom"
                android:layoutDirection="ltr"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categories"
            android:gravity="start"
            android:textSize="23sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/colorAccent" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_category_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                tools:listitem="@layout/item_category_main"
                tools:itemCount="15"/>

        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:onClick="openDrawer"
            android:padding="15dp"
            android:src="@drawable/ic_menu"
            android:tint="@android:color/black"/>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cart"
                android:paddingHorizontal="5dp"
                android:background="?selectableItemBackground"
                android:onClick="viewCart"
                android:tint="@android:color/black"/>
            <TextView
                android:id="@+id/cart_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_gravity="end"
                android:textColor="@android:color/white"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:textDirection="ltr"
                android:background="@drawable/badge_background"/>
        </FrameLayout>
    </FrameLayout>
    <ProgressBar
        android:id="@+id/progress_bar_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <include layout="@layout/no_internet_connection_layout"/>
</FrameLayout>