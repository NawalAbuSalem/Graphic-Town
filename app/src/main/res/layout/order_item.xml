<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp">
    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="8dp"
        app:sl_shadowColor="#24000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_cornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_item_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/order_header_background"
                android:paddingVertical="7dp"
                android:paddingStart="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#2132"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_status"
                            android:textSize="15sp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="جاري التنفيذ"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_date"
                            android:textSize="15sp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/9/2020"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_delivery_date"
                            android:textSize="15sp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/order_delivery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30/9/2020"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>
               <FrameLayout
                   android:layout_width="0dp"
                   android:layout_weight=".4"
                   android:gravity="center"
                   android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/order_image"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                   android:background="#26C8C3C3"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   android:adjustViewBounds="true"
                   />
                   <com.github.ybq.android.spinkit.SpinKitView
                       android:id="@+id/spin_kit"
                       style="@style/SpinKitView.DoubleBounce"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_gravity="center"
                       app:SpinKit_Color="@color/colorAccent" />
               </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </com.dd.ShadowLayout>
</FrameLayout>