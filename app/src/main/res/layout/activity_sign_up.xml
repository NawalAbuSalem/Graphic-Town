<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".Activities.SignUpActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center_horizontal">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="40dp"
           android:layout_marginHorizontal="15dp">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_back"
               android:tint="@android:color/black"
               android:paddingHorizontal="5dp"
               android:background="?selectableItemBackground"
               android:onClick="back"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/Create_New_Account"
               android:gravity="start"
               android:textSize="25sp"
               android:layout_marginStart="20dp"
               android:fontFamily="@font/nunito_semi_bold"
               android:textColor="@android:color/black" />
       </LinearLayout>
       <RelativeLayout
           android:layout_width="110dp"
           android:layout_height="110dp"
           android:layout_marginTop="40dp"
           android:layoutDirection="rtl">

           <com.mikhaellopez.circularimageview.CircularImageView
               android:id="@+id/sign_up_image"
               android:layout_width="110dp"
               android:layout_height="110dp"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:src="@drawable/ic_user_image"
               android:adjustViewBounds="true"
               app:civ_border="false"/>

           <ImageView
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_alignParentStart="true"
               android:layout_alignParentBottom="true"
               android:layout_marginStart="15dp"
               android:background="@drawable/camera_image_background"
               android:padding="6dp"
               android:src="@drawable/ic_camera"
               android:onClick="chooseAccountImage"/>
       </RelativeLayout>
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:layout_marginHorizontal="28dp"
           app:cardCornerRadius="5dp"
           app:cardElevation="5dp"
           >
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:backgroundTint="@android:color/white">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/email_sign_up"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="@string/Email_address"
                   android:textSize="13sp"
                   android:textColorHint="#000833"
                   android:textColor="#000833"
                   android:inputType="textEmailAddress"
                   android:maxLines="1"
                   android:padding="12dp"
                   android:background="@android:color/white"
                   android:textAlignment="viewStart"/>
           </com.google.android.material.textfield.TextInputLayout>
       </com.google.android.material.card.MaterialCardView>
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="28dp"
           app:cardCornerRadius="5dp"
           app:cardElevation="5dp"
           >
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:backgroundTint="@android:color/white">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/user_name_sign_up"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="@string/User_Name"
                   android:textSize="13sp"
                   android:textColorHint="#000833"
                   android:textColor="#000833"
                   android:inputType="text"
                   android:maxLines="1"
                   android:padding="12dp"
                   android:textAlignment="viewStart"
                   android:background="@android:color/white"/>
           </com.google.android.material.textfield.TextInputLayout>
       </com.google.android.material.card.MaterialCardView>
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="28dp"
           app:cardCornerRadius="5dp"
           app:cardElevation="5dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <com.hbb20.CountryCodePicker
                   android:id="@+id/country_code_picker"
                   android:layout_width="0dp"
                   android:layout_weight=".5"
                   android:layout_height="match_parent"
                   app:ccp_showFlag="true"
                   app:ccp_showNameCode="false"
                   app:ccp_showFullName="false"
                   app:ccp_arrowColor="@android:color/white"
                   app:ccpDialog_initialScrollToSelection="false"
                   app:ccpDialog_keyboardAutoPopup="false"
                   app:ccpDialog_showCloseIcon="true"
                   app:ccpDialog_showNameCode="true"
                   app:ccp_defaultPhoneCode="966"
                   android:gravity="center"
                   app:ccp_showArrow="true"
                   app:ccp_contentColor="#000833" />
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="0dp"
                   android:layout_weight="1.1"
                   android:layout_height="match_parent"
                   android:backgroundTint="@android:color/white">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/phone_number_sign_up"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:hint="@string/Phone_Number"
                       android:textSize="13sp"
                       android:textColorHint="#000833"
                       android:textColor="#000833"
                       android:inputType="phone"
                       android:maxLines="1"
                       android:padding="12dp"
                       android:textAlignment="viewStart"
                       android:background="@android:color/white"/>
               </com.google.android.material.textfield.TextInputLayout>
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="28dp"
           app:cardCornerRadius="5dp"
           app:cardElevation="5dp"
           >
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:backgroundTint="@android:color/white">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/password_sign_up"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="@string/Password"
                   android:textSize="13sp"
                   android:textColorHint="#000833"
                   android:textColor="#000833"
                   android:inputType="textPassword"
                   android:maxLines="1"
                   android:padding="12dp"
                   android:background="@android:color/white"
                   android:textAlignment="viewStart"/>
           </com.google.android.material.textfield.TextInputLayout>
       </com.google.android.material.card.MaterialCardView>
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="28dp"
           app:cardCornerRadius="5dp"
           app:cardElevation="5dp"
           >
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:backgroundTint="@android:color/white">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/confirm_password_sign_up"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="@string/Confirm_Password"
                   android:textSize="13sp"
                   android:textColorHint="#000833"
                   android:textColor="#000833"
                   android:inputType="textPassword"
                   android:maxLines="1"
                   android:padding="12dp"
                   android:background="@android:color/white"
                   android:textAlignment="viewStart"/>
           </com.google.android.material.textfield.TextInputLayout>
       </com.google.android.material.card.MaterialCardView>
       <Button
           android:layout_width="160dp"
           android:layout_height="50dp"
           android:layout_marginTop="40dp"
           android:background="@drawable/button_background"
           android:text="@string/create"
           android:textSize="18sp"
           android:fontFamily="@font/nunito_bold"
           android:textColor="@android:color/white"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textAllCaps="false"
           android:onClick="createNewAccount"
           android:layout_marginBottom="15dp"/>
   </LinearLayout>
</ScrollView>